<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/table_create_course_page_layout_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >

        <me.henrytao.smoothappbarlayout.SmoothAppBarLayout
            android:layout_width="match_parent"
            android:layout_height="256dp"
        >
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/table_create_course_page_layout_collapsing_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:expandedTitleMarginStart="64dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
            >

                <!-- <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher"
                    app:layout_collapseMode="parallax" /> -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:orientation="vertical"
                    app:layout_collapseMode="parallax"
                >


                    <!-- Toolbar space -->
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                    />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                    >

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="16dp"
                            android:paddingTop="16dp"
                            android:hint="Title"
                            android:textColor="#fff"
                            android:textColorHint="#33ffffff"
                            android:inputType="textCapSentences"
                        />

                    </android.support.design.widget.TextInputLayout>


                    <!-- First divider space -->
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                    />


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                    >

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="12dp"
                            android:paddingTop="12dp"
                            android:hint="Description"
                            android:textColor="#fff"
                            android:textColorHint="#33ffffff"
                            android:inputType="textCapSentences"
                        />

                    </android.support.design.widget.TextInputLayout>


                    <!-- Second divider space -->
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                    />

                </LinearLayout>

                <!-- <android.support.v7.widget.Toolbar
                    android:id="@+id/table_create_course_page_layout_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:layout_collapseMode="pin"
                    app:expandedTitleTextAppearance="@android:color/transparent"
                /> -->
            </android.support.design.widget.CollapsingToolbarLayout>
        </me.henrytao.smoothappbarlayout.SmoothAppBarLayout>

    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>
