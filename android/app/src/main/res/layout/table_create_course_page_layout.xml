<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >
        <LinearLayout
            android:id="@+id/table_create_course_page_layout_main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
        >
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
            />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
            />
        </LinearLayout>

        <me.henrytao.smoothappbarlayout.SmoothAppBarLayout
            android:layout_width="match_parent"
            android:layout_height="256dp"
        >
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/table_create_course_page_layout_collapsing_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:expandedTitleTextAppearance="@style/TitleInputText"
                app:expandedTitleMarginStart="76dp"
                app:expandedTitleMarginBottom="124dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
            >
                <LinearLayout
                    android:id="@+id/table_create_course_page_layout_collapsing_toolbar_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.6"
                >
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                    />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                    />
                </LinearLayout>
            </android.support.design.widget.CollapsingToolbarLayout>
        </me.henrytao.smoothappbarlayout.SmoothAppBarLayout>
    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>
